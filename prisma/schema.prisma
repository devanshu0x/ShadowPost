generator client {
  provider = "prisma-client-js"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User{
  id String @id @default(uuid())
  name String
  email String @unique
  password String
  threads Thread[]
}

model Thread{
  id String @id @default(uuid())
  userId String
  user User @relation(fields: [userId], references: [id])
  comments Comment[]
  isPublic Boolean
  title String
  body String
}

model Comment{
  id String @id @default(uuid())
  content String
  imageUrl String?
  upvotes Int @default(0)
  downvotes Int @default(0)
  threadId String
  thread Thread @relation(fields: [threadId],references: [id])
}
